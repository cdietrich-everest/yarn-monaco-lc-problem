{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "sourceMap": true,
        "outDir": "out/syntaxes",
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noImplicitOverride": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "syntaxes/*.monarch.ts"
    ],
    "exclude": ["out", "node-modules"]
}
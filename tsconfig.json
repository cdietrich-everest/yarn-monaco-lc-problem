{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "lib": ["ESNext"],
    "sourceMap": true,
    "types": ["node", "jest"],
    "outDir": "out",
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "moduleResolution": "Node16",
    "esModuleInterop": false,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["packages/*/src/**/*.ts"],
  "exclude": ["out", "node_modules"]
}
